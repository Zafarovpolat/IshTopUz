
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access on all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own avatar directory
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to their own portfolio directory
    match /portfolio/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write to their own portfolio gallery directory
    match /portfolio-gallery/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
