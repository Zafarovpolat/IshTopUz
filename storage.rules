rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'users' directory
    match /users/{userId}/{allPaths=**} {
      // Allow read access by anyone
      allow read;
      
      // Allow write access only if the user is authenticated and their UID matches the {userId} in the path
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
