rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public read access for all files
    match /{allPaths=**} {
      allow read;
    }

    // Authenticated users can write to their own dedicated folders
    match /users/{userId}/{path=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
